<div class="container">
  <div class="row">
    <div class="col-md-4 offset-md-4">
      <h2 class="text-center">Log in</h2>
    </div>
  </div>
  <div class="row py-5">
    <div class="col-md-6">

    </div>
    <div class="col-md-6 form-group">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="col-8 offset-2">
          <div class="field">
            <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "\uf007 username", style: "border: none", class: "far form-control p-3 m-3 border-bottom text-center" %>
          </div>
        </div>
        <div class="col-8 offset-2">
          <div class="field">
            <%= f.password_field :password, autocomplete: "current-password", placeholder: "passward", style: "border: none", class: "far form-control p-3 mt-3 mx-3 border-bottom text-center"  %>
          </div>
        </div>
        <div class="col-8 offset-2 text-center pt-5">
          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, class: "text-dark" %>
            </div>
          <% end %>
          <div class="actions">
            <%= f.submit "Log in", class: "btn btn-dark px-5" %>
          </div>
        </div>
      <% end %>
      <div class="col-8 offset-2 text-center pt-4">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
