<div class="container">
  <div class="row">
    <div class="col-md-4 offset-md-4">
      <h2 class="text-center">Sign up</h2>
    </div>
  </div>
  <div class="row py-5">
    <div class="col-md-6">

    </div>
    <div class="col-md-6 form-group">
      <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="col-8 offset-2">
          <div class="field">
            <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "\uf007 username", style: "border: none", class: "far form-control my-5 border-bottom text-center" %>
          </div>
        </div>
        <div class="col-8 offset-2">
          <div class="field">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "\uf0e0 email", style: "border: none", class: "far form-control my-5 border-bottom text-center" %>
          </div>
        </div>
        <div class="col-8 offset-2">
          <div class="field">
            <%= f.password_field :password, autocomplete: "new-password", placeholder: "passward", style: "border: none", class: "far form-control my-5 border-bottom text-center" %>
          </div>
        </div>
        <div class="col-8 offset-2">
          <div class="field">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "passward", style: "border: none", class: "far form-control my-5 border-bottom text-center" %>
          </div>
        </div>
        <div class="col-8 offset-2 text-center pt-3">
          <div class="actions">
            <%= f.submit "Sign up", class: "btn btn-dark px-5" %>
          </div>
        </div>
      <% end %>
      <div class="col-8 offset-2 text-center pt-2">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
