<%= form_with model:@user, local:true do |f| %>
  <div class="form-group">
    <%= f.label :名前 %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :プロフィール %>
    <%= f.text_area :profile, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.attachment_field :profile_image, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "更新" %>
  </div>
<% end %>