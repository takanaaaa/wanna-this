<% if post.favorited_by?(current_user) %>
  <%= link_to post_favorites_path(post), method: :delete do %>
    <script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>
    <lottie-player src="https://assets1.lottiefiles.com/packages/lf20_qdhnrrok.json"  background="transparent"  speed="1"  style="width: 35px; height: 35px;"    autoplay></lottie-player>
  <% end %>
<% else %>
  <%= link_to post_favorites_path(post), method: :post, class: "text-secondary p-1" do %>
    <i class="far fa-bookmark", style="font-size: 32px;"></i>
  <% end %>
<% end %>