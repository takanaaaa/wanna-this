<%= form_with model:post, local:true do |f| %>
  <div class="form-group">
    <%= f.label :タイトル %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :内容 %>
    <%= f.text_area :body, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.attachment_field :image, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "投稿" %>
  </div>
<% end %>