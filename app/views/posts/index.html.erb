<div class="container-fluid">
  <h5 class="my-5">投稿一覧</h5>
  <%= form_with url:search_path, method: :get, local:true do |f| %>
    <%= f.text_field :word %>
    <%= f.select 'search', options_for_select([["部分一致", "partial_match"],["完全一致", "perfect_match"]])%>
    <%= f.submit "検索" %>
  <% end %>
  <%= link_to new_post_path do %>
    <i id="new-post" class="fas fa-plus"></i>
  <% end %>
  <div class="row", style="margin: 0 auto;">
    <%= render "index", posts: @posts %>
  </div>
</div>