<div class="card mb-3 mx-5">
  <div class="card-body">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-6 text-center">
          <%= attachment_image_tag(@post, :image, :fill, 300, 300, fallback: "nophoto_thumbnail.png", cslass: "bd-placeholder-img card-img-top") %>
        </div>
        <div class="col-md-6 text-center">
          <h5 class="card-title pt-3"><%= simple_format @post.title %></h5>
          <p class="card-text"><%= simple_format @post.body %></p>
        </div>
      </div>
    </div>
  </div>
</div>
